<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting_message_button_press"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motivation_for_action_press"
        app:layout_constraintBottom_toTopOf="@+id/resultClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultActionCreateSimpleClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        app:layout_constraintTop_toBottomOf="@id/resultClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dataClassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultActionCreateSimpleClass" />

    <TextView
        android:id="@+id/dataClassContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataClassTitle"/>

    <TextView
        android:id="@+id/copyresultActionCreateSimpleClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        app:layout_constraintTop_toBottomOf="@id/dataClassContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/copydataClassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copyresultActionCreateSimpleClass" />

    <TextView
        android:id="@+id/copydataClassContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copydataClassTitle"/>
    <TextView
        android:id="@+id/loopActionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loop_is_ready_to_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copydataClassContent"/>

    <TextView
        android:id="@+id/loopResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/message_text_empty"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/loopActionStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/loopActionStatus"
        app:layout_constraintTop_toBottomOf="@+id/loopActionStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>